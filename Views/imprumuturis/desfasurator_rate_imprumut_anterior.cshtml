
@model IEnumerable<carp_tm_2025.Models.desfasurator_rate_anterior>


@{
    ViewData["Title"] = "Grafic rambursare anterior";
}

<br />


<h2 style="color:#317eac "> VECHIUL grafic de rambursare pentru nr carnet @ViewData["nrcarnetDA"] </h2>
<h3 style="color:#317eac ">sold imprumut @ViewData["sold_imprDA"], nr rate @ViewData["nrrateDA"]</h3>
<br />


@if ( (Convert.ToInt16(ViewData["nr_desfasurator"]) - 1) > 0)
{
    <p style="color:#317eac; text-decoration:none">     
        <a style="color:#317eac; text-decoration:none;" asp-action="desfasurator_rate_imprumut_anterior" asp-route-nr_desfasurator="@Convert.ToInt16(ViewData["nr_desfasurator"])-1" asp-route-nr_desfasurator_max="@ViewData["nr_desfasurator_max"]" asp-route-idimpr_d_before="@ViewData["idimpr_show_change_d"]" asp-route-nr_carnet_d_before="@ViewData["nrcarnetDA"]"><i>Grafic rambursare vechi</i></a>
    </p>
}


@if ((Convert.ToInt16(ViewData["nr_desfasurator"]) - 1) == 0)
{
    <p style="color:#317eac; text-decoration:none">
        <a style="color:#317eac; text-decoration:none;" asp-action="afisare_grafic_rambursare_nou" asp-route-nr_desfasurator="@ViewData["nr_desfasurator_max"]" asp-route-idimpr_show_change_d="@ViewData["idimpr_show_change_d"]" asp-route-nrcarnet_show_change_d="@ViewData["nrcarnetDA"]"><i>Grafic de rambursare nou</i></a>
    </p>
}
<hr />



<br />


<h2 style="color:#317eac "> Total general </h2>

<div>

    <table class="table" style="color:#317eac; border:1">
        <tr class="active">
            
            <th>

            </th>

            <th>

            </th>

            <th>

            </th>

            <th>
                total rata
            </th>
            <th>
                total dobanda
            </th>
            <th>
                total
            </th>
        </tr>

        <tr class="table" style="color: #666666; background-color: #d9edf7">
            <td>
            </td>
            <td>
            </td>
            <td>
            </td>
            <td>
                @ViewData["total_rataDA"]
            </td>
            <td>
                @ViewData["total_dobandaDA"]
            </td>
            <td>
                @ViewData["total_totalDA"]
            </td>
        </tr>

    </table>
    <br />

</div>


<br />

<div>



<table class="table table-bordered" style="text-align:center">
    <thead>
        <tr style="font-weight:normal; color:#317eac; background-color: #f5f5f5 ">

           <th style="font-weight:normal; vertical-align:middle;text-align:center"> nr rata </th>

           <th style="font-weight:normal; vertical-align:middle;text-align:center"> data rata </th>

           <th style="font-weight:normal; vertical-align:middle;text-align:center"> sold impr. </th>

           <th style="font-weight:normal; vertical-align:middle;text-align:center"> rata </th>

           <th style="font-weight:normal; vertical-align:middle;text-align:center"> dobanda </th>

            <th style="font-weight:normal; vertical-align:middle;text-align:center"> total </th>

              

            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {

            <tr style="text-align:center; color: #333333">

               <td style="vertical-align:middle; text-align:center"> @Html.DisplayFor(modelItem => item.nr_rata) </td>       
                
               <td style="vertical-align:middle; text-align:center"> @Html.Raw(item.data_rata.ToString("dd.MM.yyyy")) </td>

               <td style="vertical-align:middle; text-align:right"> @Html.DisplayFor(modelItem => item.sold_imp) </td>

               <td style="vertical-align:middle; text-align:right"> @Html.DisplayFor(modelItem => item.rata_de_plata) </td>

               <td style="vertical-align:middle; text-align:right"> @Html.DisplayFor(modelItem => item.dobanda) </td>

               <td style="vertical-align:middle; text-align:right"> @Html.DisplayFor(modelItem => item.total) </td>
            </tr>
        }
    </tbody>
</table> 

</div>


<br />


@if ((Convert.ToInt16(ViewData["nr_desfasurator"]) - 1) > 0)
{
    <p style="color:#317eac; text-decoration:none">    
        <a style="color:#317eac; text-decoration:none;" asp-action="desfasurator_rate_imprumut_anterior" asp-route-nr_desfasurator="@Convert.ToInt16(ViewData["nr_desfasurator"])-1" asp-route-nr_desfasurator_max="@ViewData["nr_desfasurator_max"]" asp-route-idimpr_d_before="@ViewData["idimpr_show_change_d"]" asp-route-nr_carnet_d_before="@ViewData["nrcarnetDA"]"><i>Grafic rambursare vechi</i></a>
    </p>
}


@if ((Convert.ToInt16(ViewData["nr_desfasurator"]) - 1) == 0)
{
    <p style="color:#317eac; text-decoration:none">
     <a style="color:#317eac; text-decoration:none;" asp-action="afisare_grafic_rambursare_nou" asp-route-nr_desfasurator="@ViewData["nr_desfasurator_max"]" asp-route-idimpr_show_change_d="@ViewData["idimpr_show_change_d"]" asp-route-nrcarnet_show_change_d="@ViewData["nrcarnetDA"]"><i>Grafic de rambursare nou</i></a>
    </p>
}

