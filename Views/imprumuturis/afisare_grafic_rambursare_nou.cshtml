
@model IEnumerable<carp_tm_2025.Models.desfasurator_rate>


@{
    ViewData["Title"] = "Grafic rabursare nou";
}


<br />


<h2 style="color:#317eac ">NOUL grafic de rambursare pentru  nr carnet  @ViewData["nr_carnet_change_d"] </h2>
<h3 style="color:#317eac ">sold imprumut @ViewBag.soldimp_change_d, nr rate @ViewData["nrrate_change_d"] </h3>

<br />
<a style="color:#317eac; text-decoration:none;" asp-action="desfasurator_rate_imprumut_anterior" asp-route-nr_desfasurator="@ViewData["nr_desfasurator"]" asp-route-nr_desfasurator_max="@ViewData["nr_desfasurator_max"]" asp-route-idimpr_d_before="@ViewData["idimpr_d_before"]" asp-route-nr_carnet_d_before="@ViewData["nr_carnet_change_d"]"><i>Grafic rambursare vechi</i></a>
<hr />
<br />




<h2 style="color:#317eac "> Total general </h2>

<div>

    <table class="table" style="color:#317eac; border:1">
        <tr class="active">
            
            <th>

            </th>

            <th>

            </th>

            <th>

            </th>

            <th>
                total rata
            </th>
            <th>
                total dobanda
            </th>
            <th>
                total
            </th>
        </tr>

        <tr class="table" style="color: #666666; background-color: #d9edf7">
            <td>
            </td>
            <td>
            </td>
            <td>
            </td>
            <td>
                @ViewData["soldimp_change_d"]
            </td>
            <td>
                @ViewData["total_dobanda_chd"]
            </td>
            <td>
                @ViewData["total_total_chd"]
            </td>
        </tr>

    </table>
    <br />

</div>


<br />

<div>



<table class="table table-bordered" style="text-align:center">
    <thead>
        <tr style="font-weight:normal; color:#317eac; background-color: #f5f5f5 ">

           <th style="font-weight:normal; vertical-align:middle;text-align:center"> nr rata </th>

           <th style="font-weight:normal; vertical-align:middle;text-align:center"> data rata </th>

           <th style="font-weight:normal; vertical-align:middle;text-align:center"> sold impr. </th>

           <th style="font-weight:normal; vertical-align:middle;text-align:center"> rata </th>

           <th style="font-weight:normal; vertical-align:middle;text-align:center"> dobanda </th>

            <th style="font-weight:normal; vertical-align:middle;text-align:center"> total </th>

              

            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {

            <tr style="text-align:center; color: #333333">

               <td style="vertical-align:middle; text-align:center"> @Html.DisplayFor(modelItem => item.nr_rata_noua) </td>       
                
               <td style="vertical-align:middle; text-align:center"> @Html.Raw(item.data_rata.ToString("dd.MM.yyyy")) </td>

               <td style="vertical-align:middle; text-align:right"> @Html.DisplayFor(modelItem => item.sold_imp) </td>

               <td style="vertical-align:middle; text-align:right"> @Html.DisplayFor(modelItem => item.rata_de_plata) </td>

               <td style="vertical-align:middle; text-align:right"> @Html.DisplayFor(modelItem => item.dobanda) </td>

               <td style="vertical-align:middle; text-align:right"> @Html.DisplayFor(modelItem => item.total) </td>
            </tr>
        }
    </tbody>
</table> 

</div>


<br />



<p>
    <h2>  <a style="color:#317eac; text-decoration:none" asp-controller="Imprumuturis" asp-action="listare_desfasurator" asp-route-id_imprumut_ld="@ViewData["idimpr_d_before"]" asp-route-nr_carnet_ld="@ViewData["nr_carnet_change_d"]" asp-route-nr_desfasurator_l="@ViewData["nr_desfasurator"]">Listare desfasurator</a></h2>
</p>
