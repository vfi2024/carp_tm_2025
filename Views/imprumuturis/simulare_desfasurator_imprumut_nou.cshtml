                </td>
                <td style="text-align:center">
                    @Html.Raw(item.data_rata.ToString("dd.MM.yyyy"))
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.sold_imp)
                </td>
                <td style="text-align:right">
                    @Html.DisplayFor(modelItem => item.rata_de_plata)
                </td>

                <td style="text-align:right">
                    @Html.DisplayFor(modelItem => item.dobanda)
                </td>

                <td style="text-align:right">
                    @Html.DisplayFor(modelItem => item.total)
                </td>


            </tr>

        }

    </table>


