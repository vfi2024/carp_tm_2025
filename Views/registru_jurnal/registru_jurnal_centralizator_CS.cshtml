    ViewData["Title"] = "Registru de casa centralizator ";
}
<br />
<h2 style="color:#317eac "> Centralizator registru de casa  </h2>


<br />
<br />
<h3 style="color:#317eac;  "> @ViewData["Titlut_rj_ccs"] </h3>

<div>

    <table class="table" style="color:#317eac; border:1">
        <tr class="active">
            <th>
                sold initial
            </th>

            <th>
                total debit
            </th>

            <th>
               total credit
            </th>

            <th>
                sold final
            </th>
           
        </tr>

        <tr class="table" style="color: #666666; background-color: #d9edf7">
            <td>
                @ViewData["SoldInitial_RJ_CCS"]
            </td>
            <td>
                @ViewData["TotalDebit_RJ_CCS"]
            </td>
            <td>
                @ViewData["TotalCredit_RJ_CCS"]
