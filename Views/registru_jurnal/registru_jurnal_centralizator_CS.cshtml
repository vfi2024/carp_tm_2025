<br />

<h3 style="color:#317eac ">  @ViewData["Titlu_rj_ccs"] </h3>

<div>
     

    <table class="table table-bordered" style="text-align:center">
       <thead>
        <tr style="font-weight:normal; color:#317eac; background-color: #f5f5f5 ">               


                <th style="color:#317eac;font-weight:normal; text-align:center; vertical-align:middle">
                    cont debit
                </th>

                <th style="color:#317eac;font-weight:normal; text-align:center;  vertical-align:middle">
                    explicatie cont debit
                </th>


                <th style="color:#317eac;font-weight:normal; text-align:center ;  vertical-align:middle">
                    cont credit
                </th>

                <th style="color:#317eac;font-weight:normal; text-align:center ;  vertical-align:middle">
                    explicatie cont credit
                </th>


                <th style="color:#317eac;font-weight:normal; text-align:center ;  vertical-align:middle">
                    debit
                </th>

                <th style="color:#317eac;font-weight:normal; text-align:center ;  vertical-align:middle">
                    credit
                </th>
          
        </tr>
       </thead>
     <tbody>
      @foreach (var item in Model)
      {
       <tr style="text-align:center; color: #333333">

                <td style="text-align: center; vertical-align:middle">
                        @Html.DisplayFor(modelItem => item.nrcont_CS_D)
                </td>

                <td style="text-align: center; vertical-align:middle">
                        @Html.DisplayFor(modelItem => item.explicatie_cont_CS_D)
                </td>

                <td style="text-align: center; vertical-align:middle">
                        @Html.DisplayFor(modelItem => item.nrcont_CS_C)
                </td>

                <td style="text-align: center; vertical-align:middle">
                        @Html.DisplayFor(modelItem => item.explicatie_cont_CS_C)
                </td>

                <td style="text-align: right; vertical-align:middle">
                        @Html.DisplayFor(modelItem => item.total_debit)
                </td>

                <td style="text-align:  vertical-align:middle">
                        @Html.DisplayFor(modelItem => item.total_credit)
                </td>          

        </tr>
      }

      </tbody>

    </table>     

</div>



<br />
<hr />
