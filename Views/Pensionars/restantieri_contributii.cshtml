@*@using X.PagedList.Mvc.Core;*@
@using X.PagedList;
@using X.Web.PagedList;


@model IEnumerable<carp_tm_2025.Models.Pensionar>

@{
    ViewData["Title"] = "Restantieri contributii";
}
<br />
<h2 style="color:#317eac ">Restantieri contributii </h2>

<link rel="stylesheet" href="~/css/PagedList.css">

<br />

<div> 

    <table class="table table-bordered" style="text-align:center">
       <thead>
        <tr style="font-weight:normal; color:#317eac; background-color: #f5f5f5 ">

             <th style="font-weight:normal; vertical-align:middle"> nr carnet </th>

                <th style="font-weight:normal; vertical-align:middle"> nume si prenume </th>

             <th style="font-weight:normal; vertical-align:middle"> plata contributie </th>

             <th style="font-weight:normal; vertical-align:middle"> localitate </th>

             <th style="font-weight:normal; vertical-align:middle"> strada </th>

             <th style="font-weight:normal; vertical-align:middle"> nr </th>

              <th style="font-weight:normal; vertical-align:middle"> bloc </th>
            
        </tr>
       </thead>
     <tbody>
      @foreach (var item in Model)
      {      
      

       <tr style="text-align:center; color: #333333">

         <td style="vertical-align:middle">  @Html.DisplayFor(modelItem => item.nrcarnet) </td> 

         <td style="vertical-align:middle"> @Html.DisplayFor(modelItem => item.nume) </td>

         <td style="vertical-align:middle; text-align:center">  @Html.Raw(item.lunaajdeces.ToString("dd.MM.yyyy")) </td>

         <td style="vertical-align:middle; text-align:center"> @Html.DisplayFor(modelItem => item.localitate) </td>
                

         <td style="vertical-align:middle; text-align:center"> @Html.DisplayFor(modelItem => item.strada) </td>

          <td style="vertical-align:middle; text-align:center"> @Html.DisplayFor(modelItem => item.nr) </td>

          <td style="vertical-align:middle; text-align:center"> @Html.DisplayFor(modelItem => item.bloc) </td>
                                                                  

       </tr>  

      }
      </tbody>
        
    </table>     

    @Html.PagedListPager((IPagedList)ViewData["restantieri_contributii"], page => Url.Action("restantieri_contributii", "Pensionars", new { page = page }))

</div> 


<p>
