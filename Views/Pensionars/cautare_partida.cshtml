@model IEnumerable<carp_tm_2025.Models.Pensionar>

@{
    ViewBag.Title = "cautare_partida";
}

<h2 style="color:#317eac; "> cautare partida dupa nume</h2>


<form method="get">
      <table class="table"style=" border: solid 1px #ddd ;  text-align:center">
        <br />
        <tr>
            
            <td style="padding-top:25px; padding-bottom:25px">
                <input type="submit" style="font-weight:bold; background:none; border:none; color:#317eac; " value="cautare partida care contine" />

                <input type="search" name="searchterm" style="border: solid 1px #ddd; text-align:center" />    &nbsp;

            </td>          

        </tr>

    </table>
</form>


<br />

<table class="table table-bordered"  style="text-align:center">

    <tr style="font-weight:normal; color:#317eac; background-color: #f5f5f5 ">

            <th style="color: #317eac; text-align:center">
                @Html.DisplayNameFor(model => model.nrcarnet)
            </th>

            <th style="color: #317eac; text-align:center">
                @Html.DisplayNameFor(model => model.nume)
            </th>

            <th style="color: #317eac; text-align:center">
                @Html.DisplayNameFor(model => model.cnp)
            </th>
            <th style="color: #317eac; text-align:center">
                @Html.DisplayNameFor(model => model.judet)
            </th>

            <th style="color: #317eac; text-align:center">
                @Html.DisplayNameFor(model => model.localitate)
            </th>
            <th style="color: #317eac; text-align:center">
                @Html.DisplayNameFor(model => model.datainscriere)
            </th>

          

        </tr>

        @foreach (var item in Model)
        {
        <tr style="text-align:center; color: #333333">
                <td>
                    @Html.DisplayFor(modelItem => item.nrcarnet)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.nume)
                </td>

                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.cnp)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.judet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.localitate)
                </td>

                <td style="text-align:center">
                    @Html.Raw(item.datainscriere.ToString("dd.MM.yyyy"))
                </td>

               

            </tr>
        }

    </table>

<br />

<p >
    <a style="color:#317eac; text-decoration:none" asp-action="Index" >Inapoi la partida</a>   
</p>

<br />


